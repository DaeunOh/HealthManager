<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="130dp"
                                             android:background="@android:color/white"
                                             tools:layout_editor_absoluteY="25dp">


    <TextView
            android:id="@+id/item_title"
            android:layout_width="203dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/post_imageButton"
            tools:text="This is post title..." android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/item_body"
            android:layout_width="203dp"
            android:layout_height="37dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="This is post body..."
            android:textSize="10dp"
            android:ellipsize="marquee"
            app:layout_constraintStart_toEndOf="@+id/post_imageButton"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.26"/>

    <ImageView
            android:id="@+id/post_imageButton"
            android:layout_width="164dp"
            android:layout_height="117dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/inputimg" android:layout_marginLeft="3dp" android:layout_marginStart="3dp"/>

    <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/colorView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>